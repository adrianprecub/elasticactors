<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	                       http://www.springframework.org/schema/context
	                       http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    <context:spring-configured/>
    <context:annotation-config/>
    <!-- @todo: add external properties here -->
    <context:property-placeholder ignore-resource-not-found="true"
                                  location="classpath:cluster-default.properties"
                                  system-properties-mode="OVERRIDE"/>

    <bean id="clusterView" class="org.elasterix.elasticactors.cassandra.ClusterView"/>

    <bean id="cassandraHostConfigurator" class="me.prettyprint.cassandra.service.CassandraHostConfigurator">
        <constructor-arg index="0" value="localhost:9160"/>
        <property name="maxActive" value="40"/>
        <property name="maxWaitTimeWhenExhausted" value="1000"/>
    </bean>

    <bean id="cassandraCluster" class="me.prettyprint.hector.api.factory.HFactory" factory-method="getOrCreateCluster">
        <constructor-arg value="${elasticactors.cluster.name}"/>
        <constructor-arg ref="cassandraHostConfigurator"/>
    </bean>

    <bean id="elasticActorsKeyspace" class="me.prettyprint.hector.api.factory.HFactory"
          factory-method="createKeyspace">
        <constructor-arg value="ElasticActors"/>
        <constructor-arg ref="cassandraCluster"/>
        <!-- constructor-arg ref="consistencyPolicy" non-default consistency policy could be set here -->
    </bean>

    <bean id="actorSystemsColumnFamilyTemplate" class="me.prettyprint.cassandra.service.template.ThriftColumnFamilyTemplate">
        <constructor-arg index="0" ref="elasticActorsKeyspace"/>
        <constructor-arg index="1" value="ActorSystems"/>
        <constructor-arg index="2">
            <bean class="me.prettyprint.cassandra.serializers.StringSerializer" factory-method="get"/>
        </constructor-arg>
        <constructor-arg index="3">
            <bean class="me.prettyprint.cassandra.serializers.StringSerializer" factory-method="get"/>
        </constructor-arg>
    </bean>

    <bean id="messageQueuesColumnFamilyTemplate" class="me.prettyprint.cassandra.service.template.ThriftColumnFamilyTemplate">
        <constructor-arg index="0" ref="elasticActorsKeyspace"/>
        <constructor-arg index="1" value="ActorSystems"/>
        <constructor-arg index="2">
            <bean class="me.prettyprint.cassandra.serializers.StringSerializer" factory-method="get"/>
        </constructor-arg>
        <constructor-arg index="3">
            <bean class="me.prettyprint.cassandra.serializers.TimeUUIDSerializer" factory-method="get"/>
        </constructor-arg>
    </bean>

    <bean id="commitLog" class="org.elasterix.elasticactors.messaging.journal.CassandraCommitLog"/>

    <bean id="elasticActorsCluster" class="org.elasterix.elasticactors.cluster.ElasticActorsCluster"/>

    <bean id="messageQueueWorkerExecutor" class="java.util.concurrent.Executors" factory-method="newCachedThreadPool">
        <constructor-arg index="0">
            <bean class="org.elasterix.elasticactors.util.concurrent.DaemonThreadFactory">
                <constructor-arg index="0" value="MESSAGEQUEUE-WORKER"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="messageQueueWorkers" class="org.elasterix.elasticactors.messaging.LocalMessageQueueWorkers">
        <constructor-arg index="0" ref="messageQueueWorkerExecutor"/>
        <constructor-arg index="1" value="4"/>
    </bean>

    <alias name="messageQueueWorkers" alias="localMessageQueueFactory"/>

    <bean id="remoteMessageQueueFactory" class="org.elasterix.elasticactors.messaging.RemoteMessageQueueFactory"/>

    <bean id="nodeSelectorFactory" class="org.elasterix.elasticactors.cluster.cassandra.CassandraNodeSelectorFactory"/>

</beans>
