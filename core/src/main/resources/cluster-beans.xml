<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	                       http://www.springframework.org/schema/context
	                       http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    <context:spring-configured/>
    <context:annotation-config/>

    <bean id="clusterView" class="org.elasterix.elasticactors.cassandra.ClusterView"/>

        <bean id="cassandraHostConfigurator" class="me.prettyprint.cassandra.service.CassandraHostConfigurator">
            <constructor-arg index="0" value="localhost:9160"/>
            <property name="maxActive" value="40"/>
            <property name="maxWaitTimeWhenExhausted" value="1000"/>
        </bean>

        <bean id="cassandraCluster" class="me.prettyprint.hector.api.factory.HFactory" factory-method="getOrCreateCluster">
            <constructor-arg value="${elasticactors.cluster.name}"/>
            <constructor-arg ref="cassandraHostConfigurator"/>
        </bean>

        <bean id="elasticActorsKeyspace" class="me.prettyprint.hector.api.factory.HFactory"
              factory-method="createKeyspace">
            <constructor-arg value="ElasticActors"/>
            <constructor-arg ref="cassandraCluster"/>
            <!-- constructor-arg ref="consistencyPolicy" non-default consistency policy could be set here -->
        </bean>


    <bean id="elasticActorsCluster" class="org.elasterix.elasticactors.cluster.ElasticActorsCluster"/>

</beans>
