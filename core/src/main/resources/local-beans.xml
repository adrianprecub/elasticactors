<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	                       http://www.springframework.org/schema/context
	                       http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    <context:spring-configured/>
    <context:annotation-config/>
    <bean id="messageQueueWorkerExecutor" class="java.util.concurrent.Executors" factory-method="newCachedThreadPool">
            <constructor-arg index="0">
                <bean class="org.elasterix.elasticactors.util.concurrent.DaemonThreadFactory">
                    <constructor-arg index="0" value="MESSAGEQUEUE-WORKER"/>
                </bean>
            </constructor-arg>
        </bean>

        <bean id="messageQueueWorkers" class="org.elasterix.elasticactors.messaging.LocalMessageQueueWorkers">
            <constructor-arg index="0" ref="messageQueueWorkerExecutor"/>
            <constructor-arg index="1" value="1"/>
        </bean>

    <bean id="actorExecutor" class="org.elasterix.elasticactors.util.concurrent.ThreadBoundExecutorImpl">
            <constructor-arg index="0">
                <bean class="org.elasterix.elasticactors.util.concurrent.DaemonThreadFactory">
                    <constructor-arg index="0" value="ACTOR-WORKER"/>
                </bean>
            </constructor-arg>
            <constructor-arg index="1" value="4"/>
        </bean>

    <alias name="messageQueueWorkers" alias="localMessageQueueFactory"/>

    <bean name="remoteMessageQueueFactory" class="org.elasterix.elasticactors.test.UnsupportedMessageQueueFactory"/>

    <bean id="simpleScheduler" class="org.elasterix.elasticactors.cluster.scheduler.SimpleScheduler"/>

    <bean id="testActorSystem" class="org.elasterix.elasticactors.test.TestActorSystem"/>

    <bean id="persistentActorRepository" class="org.elasterix.elasticactors.test.NoopPersistentActorRepository"/>

    <bean id="commitLog" class="org.elasterix.elasticactors.test.NoopCommitLog"/>
</beans>

